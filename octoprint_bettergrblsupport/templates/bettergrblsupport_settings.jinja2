<form class="form-horizontal">
	<h4>UI Options</h4>
	<hr>
		<div class="control-group">
				<div class="controls">
						<label class="checkbox">
						<input type="checkbox" data-bind="checked: reOrderTabs"> Grbl Control is always first tab *
						<br>
						<input type="checkbox" data-bind="checked: hideTempTab"> Hide the Octoprint Temperature tab *
						<br>
						<input type="checkbox" data-bind="checked: hideGCodeTab"> Hide the Octoprint GCode Viewer tab *
						<br>
						<input type="checkbox" data-bind="checked: hideControlTab"> Hide the Octoprint Control tab *
						<!-- ko ifnot: hideControlTab -->
							<br>
							<input type="checkbox" data-bind="checked: customControls"> Add Laser Controls and State to Control tab *
						<!-- /ko -->
						</label>
				</div>
		</div>

		<h4>Grbl Options</h4>
		<hr>
		<label class="control-label">Hello Command</label>
		<div class="controls">
				<input type="text" class="input-mini" data-bind="value: helloCommand">
				<br>
				<label class="checkbox">
					<input type="checkbox" data-bind="checked: suppressM115"> Replace M115 requests with above
				</label>
		</div>

		<br>

		<div class="control-group">
			<label class="control-label">Status Command</label>
			<div class="controls">
					<input type="text" class="input-mini" data-bind="value: statusCommand">
					<br>
					<label class="checkbox">
					<input type="checkbox" data-bind="checked: suppressM105"> Replace M105 requests with above
					<br>
					<input type="checkbox" data-bind="checked: disablePolling"> Disable status polling while printing
					</label>
			</div>
		</div>

		<label class="control-label">Position Command</label>
		<div class="controls">
				<input type="text" class="input-mini" data-bind="value: positionCommand">
				<br>
				<label class="checkbox">
					<input type="checkbox" data-bind="checked: suppressM114"> Replace M114 requests with above
				</label>
		</div>

		<br>

		<label class="control-label">Dwell Command</label>
		<div class="controls">
				<input type="text" class="input-mini" data-bind="value: dwellCommand">
				<br>
				<label class="checkbox">
					<input type="checkbox" data-bind="checked: suppressM400"> Replace M400 requests with above
				</label>
				<br>
				<label class="checkbox">
					<input type="checkbox" data-bind="checked: suppressM110"> Suppress M110 requests
					<br>
					<input type="checkbox" data-bind="checked: disableModelSizeDetection"> Disable Model Size Detection *
					<br>
					<input type="checkbox" data-bind="checked: neverSendChecksum"> Never Send Checksums *
					<br>
					<input type="checkbox" data-bind="checked: disablePrinterSafety"> Disable Printer Safety Check Plugin *
				</label>
		</div>
		<br>
		<p>* Server restart is required for this setting change to take effect</p>
		<h4>Grbl Settings</h4>
		<hr>

		<br>
		<label class="control-label" data-bind="text: grblSettingsText"/>

</form>
